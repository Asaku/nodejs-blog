extends layout_back

block content
    .container
        .row.row-offcanvas.row-offcanvas-right
            .col-xs-12.col-sm-9
                p.pull-right.visible-xs
                    button.btn.btn-primary.btn-xs(type='button', data-toggle='offcanvas') Toggle nav
                .jumbotron
                    h1 Administration
                .row
                    each article in articles
                        .col-xs-6.col-lg-4
                            h2 #{article.title}
                            p #{article.content.substr(0, 100) + '...'}
                            p
                                a.btn.btn-primary(href='/article/' + article.slug, role='button') View details
                                a.btn.btn-danger(href='/article/' + article.slug + '/remove', role='button') Remove
        form(method="post" action="admin/create-article")
            .form-group
                label Titre
                input(class="form-control" type="text" name="title")
            .form-group
                label Contenue
                textarea(name="content").form-control
            .form-group
                label
                input(class="btn btn-primary" type="submit")