extends layout

block content
    .container
        .row.row-offcanvas.row-offcanvas-right
            .col-xs-12.col-sm-9
                p.pull-right.visible-xs
                    button.btn.btn-primary.btn-xs(type='button', data-toggle='offcanvas') Toggle nav
                .jumbotron
                    h1 Bienvenue sur mon blog
                    p
                        | Some example of nodeJS/Express/jade and mongoDB
                .row
                    each article in articles
                        .col-xs-6.col-lg-4
                            h2 = article.title
                            p = article.content.substr(1, 100) + '...'
                            p
                                a.btn.btn-default(href='/article/' + article.slug, role='button') View details Â»*
        form(method="post")
            .form-group
                label
                input(class="form-control" type="text" name="title")
            .form-group
                label
                textarea(name="content").form-control
            .form-group
                label
                input(class="btn btn-primary" type="submit")